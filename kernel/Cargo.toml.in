[package]
name = "kernel"
version = "@PACKAGE_VERSION@"
authors = ["@KELNER_AUTHOR_NAME@ <@KELNER_AUTHOR_EMAIL@>"]

[profile.dev]
# XXX: We cannot use opt-level = 0 or 1 here. I do not know why. Maybe, I
# should spend time looking at Rust compiler code.
opt-level = 2
# XXX: Also if we make `incremental` to be true, our kernel panics. I do not
# know why too.
incremental = false
panic = "abort"

[profile.release]
panic = "abort"

[profile.test]
opt-level = 2
incremental = false

[dependencies]
siphasher = "~0.2"
